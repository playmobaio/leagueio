{
  "name": "leagueio",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/server.js",
  "scripts": {
    "serve-debug": "nodemon --inspect dist/server/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Webpack,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-webpack\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "start": "npm run serve",
    "build": "npm run clean && npm run build-webpack && npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node dist/server/server.js",
    "watch-node": "nodemon dist/server/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Webpack,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-webpack\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "find ./tests -name '*.ts' | xargs ts-mocha --paths -p tsconfig.test.json",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-webpack": "webpack --mode=development",
    "watch-webpack": "webpack --mode=development --watch",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "lint-fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "copy-static-assets": "npm run html && npm run css && npm run assets",
    "html": "copyfiles -f src/client/**/*.html dist/client",
    "css": "copyfiles -f src/client/css/* dist/client/css",
    "assets": "copyfiles -f src/client/assets/* dist/client/assets",
    "debug": "npm run build && npm run watch-debug",
    "clean": "rimraf coverage dist tmp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philipslan/leagueio.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/philipslan/leagueio/issues"
  },
  "homepage": "https://github.com/philipslan/leagueio#readme",
  "dependencies": {
    "express": "^4.17.1",
    "path": "^0.12.7",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "strict-event-emitter-types": "^2.0.0",
    "uuid": "^8.2.0"
  },
  "engines": {
    "node": "12.x"
  },
  "devDependencies": {
    "@types/concurrently": "^5.2.1",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "~14.0.14",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "~2.34.0",
    "@typescript-eslint/parser": "~2.34.0",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.3.0",
    "eslint": "~6.8.0",
    "eslint-config-prettier": "~6.10.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.4",
    "prettier": "~2.0.5",
    "rimraf": "~3.0.2",
    "ts-loader": "^7.0.5",
    "ts-mocha": "^7.0.0",
    "tsutils": "~3.17.0",
    "typemoq": "^2.1.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
